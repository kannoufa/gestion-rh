
{% extends 'user/slide.html.twig' %}

{% block title %}
    {{message.title}}
{% endblock %}
{% block body %}
<div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white mr-2">
            <i class="mdi mdi-mail"></i>
        </span> Messagerie
    </h3>
</div>
<div class="card">
  <div class="card-body">
    <h4 class="card-title">{{ message.title }}</h4>
    <div class="d-flex">
      <div class="d-flex align-items-center mr-4 text-muted font-weight-light">
        <i class="mdi mdi-account-outline icon-sm mr-2"></i>
        <span>{{ message.sender.personnel.nom }} {{ message.sender.personnel.prenom }}</span>
      </div>
      <div class="d-flex align-items-center text-muted font-weight-light">
        <i class="mdi mdi-clock icon-sm mr-2"></i>
        <span>{{message.createdAt | date('d/m/Y à H:i')}}</span>
      </div>
    </div>            
    <div class="d-flex mt-4 align-items-top">
      <div class="mb-0 flex-grow">
        {% if message.sender.personnel.filename %}
          <img class="img-sm rounded-circle mr-3" src="{{ asset('uploads/images/personnels/' ~ message.sender.personnel.filename)}}" alt="image">
        {% else %}
          <img class="img-sm rounded-circle mr-3" src="{{ asset('uploads/images/personnels/avatar.jpg')}}" alt="image">
        {% endif %}
      </div>
      <div class="mb-0 flex-grow">
        <p class="mb-0 font-weight-light">{{ message.message | raw }}</p>        
      </div>
    </div>
    <a href="{{ path('send') }}" class="btn-gradient-primary btn ml-5 mt-3 btn-icon-text">
      <i class="mdi mdi-message btn-icon-prepend" aria-hidden="true"></i> Répondre
    </a>
  </div>
</div>
              
{% endblock %}
