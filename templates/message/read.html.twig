
{% extends 'user/slide.html.twig' %}

{% block title %}
    {{message.title}}
{% endblock %}
{% block body %}
<div class="container">
         <center><img src="{{asset('assets/images/logo.png')}}" style="align: right; " width="370px"></center>
        <hr>
        <h1>Messagerie</h1>
        <center>
        <div class="card card-warning card-outline direct-chat direct-chat-primary col-md-11">
            <div class="card-header">
                <h3 class="card-title">{{ message.title }}</h3>
            </div>
            <div class="card-body">
                <div class="direct-chat-messages">
                    <div class="direct-chat-msg">
                        <div class="direct-chat-infos clearfix">
                            <span class="direct-chat-name float-left">{{ message.sender.personnel.nom }} {{ message.sender.personnel.prenom }}</span>
                            <span class="direct-chat-timestamp float-right">{{message.createdAt | date('d/m/Y à H:i')}}</span>
                        </div>
                        {% if message.sender.personnel.filename %}
                            <img class="direct-chat-img" src="{{ asset('uploads/images/personnels/' ~ message.sender.personnel.filename)}}" alt="image">
                        {% else %}
                            <img class="direct-chat-img" src="{{ asset('uploads/images/personnels/avatar.jpg')}}" alt="image">
                        {% endif %}
                        <div class="direct-chat-text">
                            {{ message.message | raw }}
                        </div>
                    </div>
                </div>
            </div>
            <a href="{{ path('send') }}" class="btn-danger btn">
                <i class="fa fa-send" aria-hidden="true"></i> Répondre
            </a>
        </div>
        </center>
        <br>
</div>
{% endblock %}
