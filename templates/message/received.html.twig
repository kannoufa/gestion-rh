{% extends 'baseuser.html.twig' %}

{% block title %}Messagerie
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row">
			<div class="col-12">
				<h1>Messagerie</h1>
				<h2>Boîte de réception</h2>
				<p>Vous avez reçu
					{{ app.user.received|length }}
					messages</p>
			</div>
			<div class="col-3">De</div>
			<div class="col-3">Sujet</div>
			<div class="col-3">Date</div>
			<div class="col-3">Actions</div>
			{% for message in app.user.received %}
				

				<div class="col-3 ">{{ message.sender.email }}</div>
				<div class="col-3 ">
				{# {% if message.objet == 'Remplir vos informations' %}
					<a href="{{ message.message }}">Ciquer ici</a>
					{% else %}
					<a href="{{ path("read", {id: message.id}) }}">{{ message.objet }}</a>
					{% endif %} #}
					 {% if message.objet == 'Demande validation : Mission' %}
                                        <a href="http://127.0.0.1:8000/demande/{{ message.lien }}">Cliquer ici</a>
                                        {% elseif message.objet == 'Demande validation : Absence' %}
                                        <a href="http://127.0.0.1:8000/absence/{{ message.lien }}">Cliquer ici</a>
                                        {% else %}
                                        <a href="{{ path("read", {id: message.id}) }}">{{ message.objet }}</a>
                                        {% endif %}

					
				</div>
				<div class="col-3 ">{{ message.createdAt|date }}</div>
				<div class="col-3">
                   {{ message.objet }}
				</div>
			{% endfor %}


{% endblock %}
