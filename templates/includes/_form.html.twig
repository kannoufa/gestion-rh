    <div class="row"> 
      <div class="col-md-3">
        <div class="logo_background">
            <img src="{{asset('assets/images/logo_bleu.gif')}}" width="320px" class="logo_form"/>
        </div>
      </div>
      <div class="col-md-1"></div>
      <div class="col-md-7 form">
        <h1>{{ titre }}</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center">
                {{ message }}
            </div>
        {% endfor %}

        {% if titre == "Attestation de salaire" %}

            {{ form_start(form) }}
            {{ form_row(form.type) }}
            <br><input type="text" class="form-control" name="autre" placeholder="Autres : Entrer votre choix si il est différent des propositions ci-dessus">
            <br>{{ form_row(form.submit) }}  
            {{ form_end(form) }}

        {% elseif titre == 'Ordre de mission' %}
            {{ form_start(form) }}
                <ul class="form-list">
                    <li>{{form_row(form.objet)}}<li>
                    <li>{{form_row(form.destination)}}<li>
                    <li>{{form_row(form.membres)}}<li>
                    <div class="row">
                        <div class="col-md-6">{{form_row(form.date_depart)}}</div>
                        <div class="col-md-6">{{form_row(form.heure_dep)}}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">{{form_row(form.date_retour)}}</div>
                        <div class="col-md-6">{{form_row(form.heure_retour)}}</div>
                    </div>
                    <div class="row align-items-end">
                        <div class="col-md-4">
                                <label class="form-label label">Transport</label>
                                <select class="form-select form-control" name="transport">
                                    <option>Transport public</option>
                                    <option>Véhicule personnel</option>
                                    <option>Véhicule de service</option>
                                </select>
                        </div>
                        <div class="col-md-8">
                            <label class="form-label text-danger"> ** Si vous utilisez votre voiture comme transport, merci d'ajouter le matricule. Sinon laissez ce champs vide</label>
                           
                                <input type="text" class='form-control' placeholder="matricule ..." name="matricule">                      
                        </div>  
                    </div>
                    <div class="row">
                        <div class="col-md-4">{{form_row(form.frais)}}</div>
                        <div class="col-md-8">{{form_row(form.motifFile)}}</div>
                    </div>
                </ul>
            {{ form_end(form) }}<br>   
        {% else %}
            {{ form_start(form) }}
                <ul class="form-list">
                    <li class="form-list__row">            
                        {{ form_widget(form) }}
                    </li>
                </ul>
            {{ form_end(form) }}
        {% endif %}        
      </div>
    </div>