{% extends 'admin/slide.html.twig' %}
 
{% block body %}

<div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white mr-2">
            <i class="mdi mdi-format-list-bulleted"></i>
        </span> {% block titre %}{% endblock %}
    </h3>
</div>

 <div class="card">
    <div class="card-body">
        <div class="table-responsive">  
            {% if documents|length > 0 %}
                <table class="table text-center">
                    <thead>
                        <tr>
                            <th>Personnel</th>
                            <th>Date de la demande</th>
                            {% block col_head %}{% endblock %}
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for document in documents %}
                            <tr>       
                                <td>
                                    <img src="{{ asset('uploads/images/personnels/' ~ document.personnel.filename) }}" class="mr-2" alt="image">
                                    {{ document.personnel.nom }} {{ document.personnel.prenom }}
                                </td>
                                <td>{{ document.createdAt | date('d/m/Y à H:i') }}</td>
                                {% block col_body %}{% endblock %}
                                <td>
                                    {% block buttons %}{% endblock %}
                                </td>
                            </tr>      
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <center><p class="badge rounded-pill badge-danger">Aucun résultat trouvé</p></center>
            {% endif %}
            <div class="pagination mt-4">
                {{knp_pagination_render(documents) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}