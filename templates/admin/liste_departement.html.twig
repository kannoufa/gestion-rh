{% extends 'admin/slide.html.twig' %}
 
{% block title %}Départements et services{% endblock %}

{% block body %}
<center><img src="{{asset('assets/images/logo.png')}}" style="align: right; " width="370px"></center>
<hr>
<h1>Départements et services</h1>
 <a href="{{ path('admin_add_departement') }}" class="btn-success btn-sm">
    <i class="fa fa-plus" aria-hidden="true"></i> Ajouter un Département/service
 </a>
<table class="table table-striped">
    <thead>
        <tr>
            <th><i class="fa fa-vcard-o" aria-hidden="true"></i> Nom Fr</th>
            <th><i class="fa fa-calendar" aria-hidden="true"></i> Nom Ar</th>
            <th><i class="fa fa-calendar" aria-hidden="true"></i> Chef</th>
            <th>Modifié</th>
        </tr>
    </thead>
    {% if documents|length > 0 %}
        <tbody>
            {% for document in documents %}
                <tr>
                    <td>{{ document.nomFR }}</td>
                    <td>{{ document.nomAr}}</td>
                    <td>{{ document.chef.username}}</td>
                    <td>
                        <a href="{{ path('admin_set_departement', {id:document.id}) }}" class="btn-info btn-lg">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>      
            {% endfor %}
        </tbody>
    </table>
    {% else %}
        <center><p class="badge rounded-pill bg-danger">Aucun résultat trouvé</p></center>
    {% endif %}
    <div class="pagination">
        {{knp_pagination_render(documents) }}
    </div><br>
</div>

{% endblock %}