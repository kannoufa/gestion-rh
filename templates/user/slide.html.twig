<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>{% block title %}{% endblock %}</title>
    

    <link rel="stylesheet" href="{{asset('assets/vendors/mdi/css/materialdesignicons.min.css')}}">
    <link rel="stylesheet" href="{{asset('assets/vendors/css/vendor.bundle.base.css')}}">

    <link rel="stylesheet" href="{{asset('assets/css/style.css')}}">

  </head>
  <body>
    <div class="container-scroller">

      <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
          <a class="navbar-brand brand-logo" href="{{ path('user') }}">
            <img src="{{asset('assets/images/logo.png')}}" alt="logo" />
          </a>
          <a class="navbar-brand brand-logo-mini" href="{{ path('user') }}">
            <img src="{{asset('assets/images/logo-mini.svg')}}" alt="logo" />
          </a>
        </div>
        <div class="navbar-menu-wrapper d-flex align-items-stretch">
          <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
            <span class="mdi mdi-menu"></span>
          </button>
          <ul class="navbar-nav navbar-nav-right">
            <li class="nav-item nav-profile dropdown">
              <a class="nav-link" href="{{ path('admin_document', {repo: 'Personnel', id: app.user.personnel.id}) }}">
                <div class="nav-profile-img">
                  <img src="{{ asset('uploads/images/personnels/' ~ app.user.personnel.filename) }}" alt="image">
                  <span class="availability-status online"></span>
                </div>
                <div class="nav-profile-text">
                  <p class="mb-1 text-black">{{ app.user.personnel.nom }} {{ app.user.personnel.prenom }}</p>
                </div>
              </a>
            </li>
            <li class="nav-item d-none d-lg-block full-screen-link">
              <a class="nav-link">
                <i class="mdi mdi-fullscreen" id="fullscreen-button"></i>
              </a>
            </li>
            <li class="nav-item nav-logout d-none d-lg-block">
              <a class="nav-link" href="{{ path('message') }}">
                <i class="mdi mdi-email-outline"></i>
              </a>
            </li>

            <li class="nav-item nav-logout d-none d-lg-block">
              <a class="nav-link" href="{{ path('security_logout') }}">
                <i class="mdi mdi-power"></i>
              </a>
            </li>
          </ul>
          <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
            <span class="mdi mdi-menu"></span>
          </button>
        </div>
      </nav>
      <div class="container-fluid page-body-wrapper">

        <nav class="sidebar sidebar-offcanvas" id="sidebar">
          <ul class="nav">
            <li class="nav-item nav-profile">
              <a class="nav-link" href="{{ path('admin_document', {repo: 'Personnel', id: app.user.personnel.id}) }}">
                <div class="nav-profile-image">
                  <img src="{{ asset('uploads/images/personnels/' ~ app.user.personnel.filename) }}" alt="profile">
                  <span class="login-status online"></span>
                </div>
                <div class="nav-profile-text d-flex flex-column">
                  <span class="font-weight-bold mb-2"> {{ app.user.personnel.nom }} {{ app.user.personnel.prenom }} </span>
                  <span class="text-secondary text-small"> {{ app.user.personnel.ppr }} </span>
                </div>
                <i class="mdi mdi-bookmark-check text-success nav-profile-badge"></i>
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="{{ path('user') }}">
                <span class="menu-title">Accueil</span>
                <i class="mdi mdi-home menu-icon"></i>
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link"  href="{{ path('user_demande_document', {repo: 'AttestationTravail'}) }}">
                <span class="menu-title">Attestation de travail</span>
                <i class="mdi mdi-label menu-icon"></i>
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link"  href="{{ path('user_demande_document', {repo: 'AttestationSalaire'}) }}">
                <span class="menu-title">Attestation de salaire</span>
                <i class="mdi mdi-label menu-icon"></i>
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link"  href="{{ path('user_demande_document', {repo: 'Absence'}) }}">
                <span class="menu-title">Demande d'absence</span>
                <i class="mdi mdi-label menu-icon"></i>
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link"  href="{{ path('user_demande_document', {repo: 'OrdreMission'}) }}">
                <span class="menu-title">Ordre de mission</span>
                <i class="mdi mdi-label menu-icon"></i>
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="{{ path('user_historique') }}">
                <span class="menu-title">Historique de demandes</span>
                <i class="mdi mdi-settings menu-icon"></i>
              </a>
            </li>

            {% if 'ROLE_ADMIN' in app.user.roles %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin') }}">
                        <span class="menu-title">Espace d'admin</span>
                        <i class="mdi mdi mdi-account-switch menu-icon"></i>
                    </a>
                </li>
            {% endif %}
            
          </ul>
        </nav>
        <div class="main-panel">
          <div class="content-wrapper">
            {% block body %}{% endblock %}
          </div>
          
          <footer class="footer">
            <div class="container-fluid clearfix">
              <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © Faculté des Sciences et Techniques Marrakech 2021</span>
            </div>
          </footer>
        </div>
        
      </div>
      
    </div>

    <script src="{{asset('assets/js/script.js')}}"></script>

    <script src="{{asset('assets/vendors/js/vendor.bundle.base.js')}}"></script>

    <script src="{{asset('assets/js/off-canvas.js')}}"></script>
    <script src="{{asset('assets/js/hoverable-collapse.js')}}"></script>
    <script src="{{asset('assets/js/misc.js')}}"></script>

  </body>
</html>